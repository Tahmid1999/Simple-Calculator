<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearance"
        android:text=""
        android:id="@+id/expressionTextView"
        android:background="#212121"
        android:textColor="#ffffff"
        android:layout_margin="0dp"
        android:textSize="75sp"
        android:ellipsize="none"
        android:focusedByDefault="true"
        android:scrollbars="horizontal"
        android:gravity="center_vertical"
        android:singleLine="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearance"
        android:text=""
        android:textColor="#ffffff"
        android:id="@+id/resultTextView"
        android:background="#263238"
        android:layout_margin="0dp"
        android:textSize="80sp"
        android:ellipsize="none"
        android:gravity="bottom|right"
        android:focusedByDefault="true"
        android:scrollbars="horizontal"
        android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00695C"
                android:onClick="onClickClr"
                android:text="C"
                android:textColor="#ffffff"
                android:textSize="30sp" />


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="("
                android:id="@+id/btnOpenParentheses"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#00695C"
                android:onClick="onClickNumber"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=")"
                android:id="@+id/btnCloseParentheses"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#00695C"
                android:onClick="onClickNumber"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="⇦"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/btnBack"
                android:textColor="#ffffff"
                android:background="#FF3D00"
                android:onClick="onClickBack"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:id="@+id/btn7"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/btn8"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/btn9"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF3D00"
                android:onClick="onClickNumber"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="30sp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:id="@+id/btn4"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/btn5"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/btn6"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF3D00"
                android:onClick="onClickNumber"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/btn1"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/btn2"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/btn3"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:id="@+id/btnMult"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#FF3D00"
                android:onClick="onClickNumber"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:id="@+id/btnPoint"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#DD2C00"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/btn0"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#4d4d4d"
                android:onClick="onClickNumber"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:id="@+id/btnEqual"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#DD2C00"
                android:onClick="onClickResult"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:id="@+id/btnDiv"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:background="#FF3D00"
                android:onClick="onClickNumber"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>